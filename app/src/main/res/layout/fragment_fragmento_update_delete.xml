<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".FragmentoUpdateDelete">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="@string/btnDelete"
                android:layout_width="159dp"
                android:layout_height="45dp" android:id="@+id/btnBorrar"
                android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/btnActualizar"
                android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/spnCategorias"
                android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="331dp"
                android:layout_height="41dp" android:id="@+id/txtPrecio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtNombre" android:hint="@string/precioProducto"
                android:inputType="number"/>
        <EditText
                android:layout_width="331dp"
                android:layout_height="41dp" android:id="@+id/txtNombre"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"
                android:hint="@string/nombreProducto" android:autoText="false" android:inputType="text"/>
        <Spinner
                android:layout_width="162dp"
                android:layout_height="37dp" android:id="@+id/spnCategorias"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtPrecio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="@string/btnUpdate"
                android:layout_width="159dp"
                android:layout_height="45dp" android:id="@+id/btnActualizar"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="37dp"
                app:layout_constraintEnd_toStartOf="@+id/btnBorrar" android:layout_marginEnd="16dp"
                android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/spnCategorias"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>